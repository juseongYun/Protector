<?xml version="1.0"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#110077CC" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="main"
                android:src="@drawable/button_logo_mini" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5sp"
                android:weightSum="9" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:onClick="introduce_product"
                    android:paddingLeft="5sp"
                    android:paddingTop="10sp"
                    android:src="@drawable/tab1_introduce_product" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:onClick="mypage"
                    android:paddingLeft="5sp"
                    android:paddingTop="10sp"
                    android:src="@drawable/selected_tab2_mypage" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:onClick="service"
                    android:paddingLeft="5sp"
                    android:paddingTop="10sp"
                    android:src="@drawable/tab3_service" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5sp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="mypage_patient"
                android:paddingLeft="5sp"
                android:src="@drawable/selected_tab4_1_patient" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="mypage_doctor"
                android:paddingLeft="5sp"
                android:src="@drawable/tab4_2_personal" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/patient_list" />

        <LinearLayout
            android:id="@+id/patient1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/list_box2"
            android:clickable="true"
            android:onClick="data_patient1"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp" >

            <TextView
                android:id="@+id/patient1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient1_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient1_product_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/patient2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_box2"
            android:clickable="true"
            android:onClick="data_patient2"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp" >

            <TextView
                android:id="@+id/patient2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient2_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient2_product_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/patient3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_box2"
            android:clickable="true"
            android:onClick="data_patient3"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp" >

            <TextView
                android:id="@+id/patient3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient3_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient3_product_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/patient4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_box2"
            android:clickable="true"
            android:onClick="data_patient4"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp" >

            <TextView
                android:id="@+id/patient4_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient4_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient4_product_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/patient5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_box2"
            android:clickable="true"
            android:onClick="data_patient5"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp" >

            <TextView
                android:id="@+id/patient5_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient5_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/patient5_product_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="add_patient"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                android:paddingRight="20sp"
                android:paddingTop="20sp"
                android:src="@drawable/button_add_list" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

