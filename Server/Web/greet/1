<script>
function check_id()
{
  window.open("check_id.php?id=" + document.list.id.value,
  "IDcheck","left=200,top=200,width=250,height=100,scrollbars=no,resizable=yes");
}

function check_nick()
{
  window.open("check_nick.php?nick=" + document.list.nick.value,
  "NICKcheck","left=200,top=200,width=250,height=100,scrollbars=no,resizable=yes");
}

function check_input()
{
  if(!document.list.name.value)
  {
    alert("이름을 입력하세요");
    document.list.name.focus();
    return;
  }

  if(!document.list.product_num.value)
  {
    alert("제품번호를 입력하세요");
    document.list.product_num.focus();
    return;
  }

  if(!document.list.medical_num.value)
  {
    alert("의료보험번호를 입력하세요");
    document.list.medical_num.focus();
    return;
  }

  if(!document.list.social_num.value)
  {
    alert("주민등록번호를 입력하세요");
    document.list.social_num.focus();
    return;
  }

  if(!document.list.emergency_num1.value)
  {
    alert("비상연락망1을 입력하세요");
    document.list.emergency_num1.focus();
    return;
  }

  if(!document.list.address.value)
  {
    alert("주소를 입력하세요");
    document.list.address.focus();
    return;
  }

  if(!document.list.medicine.value)
  {
    alert("복용중인 약을 입력하세요");
    document.list.medicine.focus();
    return;
  }

  if(!document.list.medical_history.value)
  {
    alert("병력을 입력하세요");
    document.list.medical_history.focus();
    return;
  }

  document.list.submit();
}

function reset_form()
{
  document.list.name.value="";
  document.list.medical_num.value="";
  document.list.social_num.value=""
  document.list.emergency_num1.value="";
  document.list.emergency_num2.value="";
  document.list.address.value="010";
  document.list.medicine.value="";
  document.list.medicine_history.value="";
  document.list.special.value="";

  document.list.name.focus();

  return;
}
</script>
